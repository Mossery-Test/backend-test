<%- include('../../partials/header') %>
<!-- Page Wrapper -->
<div id="wrapper">
  <%- include('../../partials/sidebar.ejs') %>

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <%- include('../../partials/navbar.ejs') %>
      <!-- Begin Page Content -->
      <div class="container-fluid">
        <%- include('../../partials/message.ejs') %>
        <!-- Page Heading -->
        <div class="custom-div">
          <h1 class="h3 mb-4 text-gray-800">Collection</h1>

          <!-- Button trigger modal -->
          <% if (collection.length > 0) { %>
          <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#modalCollection"
          >
            <i class="fas fa-plus"></i> Create Collection
          </button>
          <% } %>
        </div>
        <% if (collection.length > 0 ) { %> <%- include('table_collection') %>
        <% }else{ %> <%- include('empty_collection') %> <% } %>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <%- include('../../partials/footer') %>
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<script>
  function displayVal() {
    let name = $("#collectionName").val();

    $(".name").val(name);
  }

  $("#nameModal").on("click", ".btn-name", function () {
    $("#modalCollection").modal("toggle");
    $("#addModal").modal("show");
    displayVal();
  });

  $("input:checkbox[name=book]:checked").each(function () {
    let array = [];

    array.push($(this).val());
    $(".book").val(array);
  });

  // Edit Modal
  $("#dataTable").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    console.log(name);

    $("#editModal").modal("show");
    $(".id").val(id);
    $("#name").val(name);
  });

  $("#editModal").on("click", ".btn-name", function () {
    $("#editModal").modal("toggle");
    $("#editAddModal").modal("show");
    displayVal();
  });

  function myFunction() {
    var input, filter, ul, li, a, i, txtValue;
    input = document.getElementById("myInput");
    filter = input.value.toUpperCase();
    ul = document.getElementById("myUL");
    li = ul.getElementsByTagName("li");
    for (i = 0; i < li.length; i++) {
      a = li[i].getElementsByTagName("a")[0];
      txtValue = a.textContent || a.innerText;
      if (txtValue.toUpperCase().indexOf(filter) > -1) {
        li[i].style.display = "";
      } else {
        li[i].style.display = "none";
      }
    }
  }
</script>
